{
  "compilerOptions": {
    "target": "es2024",
    "module": "node16",
    "lib": [
      "es2022"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "script/*"
      ]
    }
  },
  "include": [
    "script/**/*",
    "types/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}